import ContactCTA from '../components/ContactCTA.astro';
import Hero from '../components/Hero.astro';
---

<BaseLayout title="À propos | Alice Briand" description="À propos de ALice Briand">
	<div class="stack gap-20">
		<main class="wrapper À propos">
			<Hero
				title="À propos"
				tagline="mes experiences et mes études."
			>
				<!-- <img
					width="1553"
